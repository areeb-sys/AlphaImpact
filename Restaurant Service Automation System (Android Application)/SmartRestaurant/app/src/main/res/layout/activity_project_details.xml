<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignInActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/back" />

                    <wasif.fyp.smartrestaurant.custom_text.customize_textview_toolbar
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="PROJECT DETAILS"
                        android:textColor="@color/white" />

                    <ImageView

                        android:id="@+id/share"

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/share" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>


            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/toolbar"
                android:background="@color/grey_400"
                android:scaleType="fitXY"
                android:src="@mipmap/ad_3" />

            <wasif.fyp.smartrestaurant.custom_text.customize_textview
                android:id="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:text="HOME CLEANING"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <wasif.fyp.smartrestaurant.custom_text.customize_textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="85dp"
                android:text="#400"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logo"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Description:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Home cleaning service..."
                    android:textColor="@color/grey_400"

                    android:textSize="13sp" />

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Address:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="A Sector A2, Umer state, Block A2, House#112 Township,Lahore"
                    android:textColor="@color/grey_400"

                    android:textSize="13sp" />

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Schedule:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="15-10-2018 04:25PM"
                    android:textColor="@color/grey_400"

                    android:textSize="13sp" />

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Payment Method:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <wasif.fyp.smartrestaurant.custom_text.customize_textview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Cash"
                    android:textColor="@color/grey_400"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linear1"
                android:background="@drawable/round_corner_"
                android:gravity="center"
                android:text="NEXT"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>