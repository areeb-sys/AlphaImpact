<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IntroLocationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <wasif.fyp.smartrestaurant.custom_text.customize_textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="Welcome to Howdy!"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <wasif.fyp.smartrestaurant.custom_text.customize_textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tell us your choice to show you the food
  "
                android:textColor="@color/grey_800"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <wasif.fyp.smartrestaurant.custom_text.customize_textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Smart Restaurant Service"
                android:textColor="@color/grey_800"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <wasif.fyp.smartrestaurant.custom_text.customize_textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Table #01"
                android:textColor="@color/grey_800"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:hint=" Enter Your Name Here"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:hint=" Enter Your Password"
                android:visibility="gone"
                android:inputType="textPassword"
                android:maxLength="11" />

            <EditText
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:hint=" Enter Your Number"
                android:inputType="number"
                android:maxLength="11" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/intro_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="@color/white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/location" />

        <wasif.fyp.smartrestaurant.custom_text.customize_textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Explore Menu"
            android:textColor="@color/white" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>